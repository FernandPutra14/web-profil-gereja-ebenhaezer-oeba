@using PKMGerejaEbenhaezer.Web.Areas.Dashboard.Models
@model DeleteConfirmationModalVM

<!-- Modal -->
<div class="modal fade" id="@Model.ModalId" tabindex="-1" aria-labelledby="@Model.ModalId" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="@Model.ModalId">@Model.ModalTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Apakah anda yakin ingin menghapus?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <form action="@Model.FormAction" method="post">
                    <button type="submit" class="btn btn-primary">Hapus</button>
                </form>
            </div>
        </div>
    </div>
</div>