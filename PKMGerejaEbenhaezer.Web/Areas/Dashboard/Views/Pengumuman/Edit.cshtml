@using PKMGerejaEbenhaezer.Web.Areas.Dashboard.Models.Pengumuman
@model EditVM
@{
    ViewData["Title"] = "Edit Pengumuman";
}

<div class="editpeng">
    <h1 class="title">Edit Pengumuman</h1>
    <ul class="breadcrumbs mb-4">
        <li><a href="#">Daftar Pengumuman</a></li>
        <li class="divider">/</li>
        <li><a href="#" class="active">Edit Pengumuman</a></li>
    </ul>

    <div class="container-fluid cardedit">
        <form asp-action="Edit" method="post" class="container" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>

            <input asp-for="@Model.Id" hidden />
            <input asp-for="@Model.PathFoto" hidden />

            <div class="row mb-3 justify-content-center align-items-center">
                <div id="dvPreview" class="d-flex justify-content-center align-items-stretch">
                    <img src="@Model.PathFoto" class="img-fluid"/>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="@Model.Judul" class="form-label"></label>
                    <input type="text" asp-for="@Model.Judul" class="form-control" />
                    <span class="form-text text-danger" asp-validation-for="@Model.Judul"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="@Model.Keterangan" class="form-label"></label>
                    <textarea type="text" asp-for="@Model.Keterangan" class="form-control"></textarea>
                    <span class="form-text text-danger" asp-validation-for="@Model.Keterangan"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="@Model.Tanggal" class="form-label"></label>
                    <input type="date" asp-for="@Model.Tanggal" class="form-control" />
                    <span class="form-text text-danger" asp-validation-for="@Model.Tanggal"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="@Model.FotoBaru" class="form-label"></label>
                    <input type="file" asp-for="@Model.FotoBaru" class="form-control" id="fileupload" />
                    <span class="form-text text-danger" asp-validation-for="@Model.FotoBaru"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <button type="submit" class="btn" style="width:100%;">Simpan</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ImagePreviewPartial" />
    <partial name="_ValidationScriptsPartial" />
}