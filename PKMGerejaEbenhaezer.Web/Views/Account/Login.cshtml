@model LoginVM
@{
    ViewData["Title"] = "Login Admin";
}

<form asp-action="Login" class="container mx-3" style="padding-top:12vh">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="mb-3">
        <label asp-for="@Model.UserName" class="form-label"></label>
        <input type="text" asp-for="@Model.UserName" class="form-control"/>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label"></label>
        <input type="password" asp-for="@Model.Password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="@Model.RememberMe" type="checkbox" class="form-check-input"/>
        <label asp-for="@Model.RememberMe" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>