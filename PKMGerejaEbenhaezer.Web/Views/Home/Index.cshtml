@model IndexVM
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section id="hero" class="container-fluid">
    <h1>Gairah Untuk Mengenal Kristus</h1>
    <p>
        "Inilah hidup yang kekal itu, yaitu bahwa mereka mengenal engkau, satu-satunya Allah
        yang benar, dan mengenal Yesus Kristus yang telah Engkau utus."
        <br />
        (Injil Yohanes 17:3)
    </p>
</section>
<!-- Akhir Hero Section -->

<!-- Pengumuman Section -->
<section class="peng">
    <!-- Header Pengumuman Section -->
    <header class="section-header">
        <div class="header-text">
            <h1>Pengumuman Gereja</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, 
                sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>
        <button class="peng-btn btn">Lihat Semua</button>
    </header>
    <!-- Akhir Header Pengumuman Section -->
    <!-- Content Pengumuman Section -->
    <div class="peng-contents">
        <div class="owl-carousel owl-theme fernand">
            @if (Model.DaftarPengumuman != null || Model.DaftarPengumuman.Count > 0)
            {
                @foreach (var pengumuman in Model.DaftarPengumuman)
                {
                    var cultureInfo = new System.Globalization.CultureInfo("id-ID");
                    <!-- Ini Cardnya Bang -->
                    <div class="item peng-card">
                        <img src="@pengumuman.PathFoto" />
                        <div class="category">
                            <div class="subject">
                                <h3>Pengumuman</h3>
                            </div>
                        </div>
                        <h2 class="peng-title">@pengumuman.Judul</h2>
                        <p>@pengumuman.Keterangan</p>
                        <div class="peng-tanggal">
                            <span><i class="ri-calendar-fill"></i>@pengumuman.Tanggal.ToString(cultureInfo.DateTimeFormat.LongDatePattern, cultureInfo)</span>
                        </div>
                    </div>
                    <!-- Ini Akhir Cardnya Bang -->
                }
            }
        </div>
    </div>
    <!-- Akhir Pengumuman Section -->
</section>
<!-- Akhir Partner Section -->


<!-- Style CSS -->
<style>
    /* Hero Section */
    #hero {
        background-image: linear-gradient(rgba(9, 5, 54, 0.3),rgba(5, 4, 46, 0.7)),url("img/background_gereja_testing.jpg");
        margin: 0px auto;
        width: 100%;
        height: 100vh;
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

        #hero h1 {
            font-family: 'Alex brush';
            color: #fff;
            padding-top: 50px;
            font-size: 80px;
            letter-spacing: 1px;
        }

        #hero p {
            color: #fff;
            font-size: 20px;
            letter-spacing: 1px;
            width: 50%;
        }
    /* Akhir Hero Section */

    /* Pengumuman Section */
    section.peng {
        width: 100%;
        padding: 100px 8%;
            
    }

    .peng .section-header {
        position: relative;
        display: flex;
        justify-content: space-between;
    }

        .peng .section-header .peng-btn {
            position: absolute;
            right: 0;
            bottom: 40px;
        }

    .peng .peng-contents {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

        .peng .peng-contents .peng-card {
        flex-basis: calc(calc(100% / 3) - 1.2%);
        border: 1px solid #eee;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .peng .peng-contents .peng-card:hover {
            box-shadow: 0px 0px 15px rgba(0,0,0,0.1);
        }

    .peng-contents .peng-card img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 5px;
    }

    .peng-contents .peng-card p {
        margin-top: 10px;
        font-size: 13px;
        color: var(--dark-heading-clr);
        display: -webkit-box;
        -webkit-box-orient: vertical;
        overflow: hidden;
        -webkit-line-clamp: 7;
        text-overflow: ellipsis;
        line-height: 1.5em;
    }

    .peng-contents .peng-card .category {
        position: relative;
        display: flex;
        justify-content: space-between;
        padding: 10px 0px;
    }

    .peng-card .category img {
        position: absolute;
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
        right: 15px;
        top: -50px;
        outline: 1px solid var(--primary-clr);
        outline-offset: 3px;
    }

    .peng-card .category .subject {
        padding: 8px 10px;
        background-color: var(--primary-light-clr);
        border-radius: 5px;
    }

    .peng-card .category .subject h3 {
        font-size: 18px;
        font-weight: 500;
        color: var(--primary-clr);
    }

    .peng-card .peng-title {
        font-size: 20px;
        font-weight: 600;
        color: var(--dark-heading-clr);
        display: -webkit-box;
        -webkit-box-orient: vertical;
        overflow: hidden;
        -webkit-line-clamp: 2;
        text-overflow: ellipsis;
        line-height: 1.3; 
    }

    .peng-card .peng-tanggal {
        padding: 15px 0px 0px;

        border-top: 1px solid #ccc;
    }

        .peng-card .peng-tanggal span {
        color: var(--primary-clr);
        text-align: center;
        font-size: 14px;
        font-weight: bold;
    }

    .peng-card .peng-tanggal span:nth-child(1) i {
            color: var(--primary-clr);
            padding-right: 10px;
            font-size: 14px;
        }

    .peng-card .peng-tanggal span b {
            font-size: 24px;
        }

    .owl-carousel .owl-nav {
        display: none;
    }

    .owl-carousel .owl-dots {
        margin-top: 5px;
    }

    .owl-carousel .owl-dots span{
        padding: 4px !important;
    }

        .owl-carousel .owl-dots.active span {
            background-color: var(--primary-clr) !important;
        }

    /* Akhir Pengumuman Section */  
</style>
