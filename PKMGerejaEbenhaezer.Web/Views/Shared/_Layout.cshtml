<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PKMGerejaEbenhaezer.Web</title>   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Owl Carousel -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />
    <!-- Akhir Owl Carousel -->
    <link rel="stylesheet" href="~/PKMGerejaEbenhaezer.Web.styles.css" asp-append-version="true" />    
</head>
<body>
    <div class="website">
        <!-- HomePage Section -->
        <div class="home" id="home">
            <!-- Navbar -->
            <nav class="main-navbar">
                <a href="#" class="logo">
                    <img src="img\logo_gereja.png"/>
                </a>
                <ul class="nav-list">
                    <li><a href="">Home</a></li>
                    <li><a href="">Warta</a></li>
                    <li><a href="">Pengunguman</a></li>
                    <li><a href="">Tentang Kami</a></li>
                    <li><a href="">Kontak</a></li>
                </ul>
                <a href="" class="login-btn">
                    Login Admin
                </a>
                <div class="menu-btn">
                    <span></span>
                </div>
            </nav>
            <!-- Akhir Navbar -->
            <!-- Body -->
            <div class="container-fluid badan-utama">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <!-- Akhir Body -->
            <!-- Footer -->          
            <!-- Akhir Footer -->
        </div>
        <!-- Akhir HomePage Section -->
    </div>
    <!-- Script js -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>       
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>   
    <script src="~/js/carousel.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
